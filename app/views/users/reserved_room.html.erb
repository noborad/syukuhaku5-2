<h1>予約済みルーム一覧</h1>

<table class="table">
    <thead>
        <th>
            ルーム画像
        </th>
        <th>
            ルーム名
        </th>
        <th>
            ルーム紹介
        </th>
        <th>
            合計料金
        </th>
        <th>
            開始日
        </th>
        <th>
            終了日
        </th>
        <th>
            予約確定日時
        </th>
    </thead>
    <tbody>
        <% @users.reservations.each do |reservation| %>
            <tr>
                <td class="align-middle"><img src="<%= reservation.room.room_image %>" alt="" class="table-image"></td>
                <td class="align-middle"><%= link_to reservation.room.name, "/rooms/#{reservation.room.id}" %></td>
                <td class="align-middle"><%= reservation.room.introduction %></td>
                <td class="align-middle"><%= reservation.cost %></td>
                <td class="align-middle"><%= reservation.start %></td>
                <td class="align-middle"><%= reservation.finish %></td>
                <td class="align-middle"><%= reservation.created_at.strftime("%Y-%m-%d %H:%M") %></td>
            </tr>
        <% end %>
    </tbody>
</table>

